<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.department.mapper.HospitalNoticeMapper">
    
    <resultMap type="com.ruoyi.department.domain.HospitalNotice" id="HospitalNoticeResult">
        <result property="id"    column="id"    />
        <result property="title"    column="title"    />
        <result property="content"    column="content"    />
        <result property="noticeType"    column="notice_type"    />
        <result property="targetAudience"    column="target_audience"    />
        <result property="priority"    column="priority"    />
        <result property="publishTime"    column="publish_time"    />
        <result property="expireTime"    column="expire_time"    />
        <result property="isTop"    column="is_top"    />
        <result property="isActive"    column="is_active"    />
        <result property="viewCount"    column="view_count"    />
        <result property="publisherId"    column="publisher_id"    />
        <result property="createdAt"    column="created_at"    />
        <result property="updatedAt"    column="updated_at"    />
        <result property="isDeleted"    column="is_deleted"    />
        <result property="deletedAt"    column="deleted_at"    />
    </resultMap>

    <sql id="selectHospitalNoticeVo">
        select id, title, content, notice_type, target_audience, priority, publish_time, expire_time, is_top, is_active, view_count, publisher_id, created_at, updated_at, is_deleted, deleted_at
        from hospital_notice
    </sql>

    <select id="selectNoticeList" parameterType="com.ruoyi.department.domain.HospitalNotice" resultMap="HospitalNoticeResult">
        <include refid="selectHospitalNoticeVo"/>
        <where>  
            <choose>
                <when test="params.includeDeleted != null and params.includeDeleted == 'true'">
                    and is_deleted = 1
                </when>
                <otherwise>
                    and is_deleted = 0
                </otherwise>
            </choose>
            <if test="title != null  and title != ''"> and title like concat('%', #{title}, '%')</if>
            <if test="noticeType != null  and noticeType != ''"> and notice_type = #{noticeType}</if>
            <if test="isActive != null "> and is_active = #{isActive}</if>
        </where>
        order by is_top desc, publish_time desc
    </select>
    
</mapper>
